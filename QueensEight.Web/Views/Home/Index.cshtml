@{
    ViewBag.Title = "Queens Eight";
}


<div class="header"></div>
<div class="container" ng-controller="GameController">
    <div class="row">
        <div class="span2" ng-controller="SolutionsController">
            <div class="board board-small" ng-repeat="solution in solutions" ng-controller="BoardController"> </div>
        </div>
        <div class="span10" ng-controller="BoardController">
            <div class="board board-large" interactive></div>
            <div>
                <button ng-click="requestSolution()">Request Solution</button>
                <button ng-click="clearBoard()">Clear Board</button>
            </div>
        </div>
    </div>
</div>
    <div class="footer" >
        <div class="logo">
            <img src="~/Content/images/Arana.png"/>
        </div> 
    </div>